<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.walkingarchive.backend.model.card.Card" table="Cards">
        <id name="id" type="java.lang.Integer" column="cardid">
            <generator class="identity" />
        </id>

        <property name="name">
            <column name="name" />
        </property>
        <property name="type">
            <column name="type" />
        </property>
        <property name="subtype">
            <column name="subtype" />
        </property>
        <property name="text">
            <column name="cardtext" />
        </property>
        <property name="flavortext">
            <column name="flavortext" />
        </property>

        <set name="sets" table="CardSets" lazy="false" fetch="join">
            <key column="cardId" />
            <many-to-many column="setId" class="org.walkingarchive.backend.model.card.Set" />
        </set>

        <set name="prices" table="CardPrices" inverse="true" lazy="false" fetch="join">
            <key column="cardid" />
            <many-to-many class="org.walkingarchive.backend.model.card.Price" column="priceid" />
        </set>
    </class>
</hibernate-mapping>