<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="walkingarchive" version="3.0">
  <display-name>walkingarchive.backend</display-name>
  <servlet>
  	<servlet-name>WalkingArchiveBackend</servlet-name>
  	<servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
  	<init-param>
  		<param-name>javax.ws.rs.Application</param-name>
  		<param-value>org.walkingarchive.backend.RestApi</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>WalkingArchiveBackend</servlet-name>
  	<url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>